rules_version = '2';

// Firebase Storage 규칙 - 클라이언트 읽기 접근 허용
service firebase.storage {
  match /b/{bucket}/o {
    // 사용자별 newsVideos 폴더 - 읽기 완전 허용 (테스트용)
    match /users/{userId}/newsVideos/{allPaths=**} {
      allow read: if true; // 모든 사용자에게 읽기 허용 (테스트용)
      allow write: if false; // Admin SDK만 쓰기 허용
    }
    
    // 기타 경로는 Admin SDK만 허용
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 